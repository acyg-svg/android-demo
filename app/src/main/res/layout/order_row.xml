<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/orderid_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:drawableLeft="@drawable/orderid"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="用户ID"
            android:textColor="#3498DB"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/itemcode_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:drawableLeft="@drawable/tag"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="代码"
            android:textColor="#E74C3C"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/customer_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:drawableLeft="@drawable/ordercustomer"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="买家"
            android:textColor="#566573"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/qty_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:drawableLeft="@drawable/orderqty"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="总数"
            android:textColor="#2C3E50  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:drawableLeft="@drawable/date"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="时间"
            android:textColor="#FD4A38  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/total_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:drawableLeft="@drawable/ordertotal"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="总费用"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/seller_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:drawableLeft="@drawable/sale_shop"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:text="卖家"
            android:textColor="#95A5A6  "
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>